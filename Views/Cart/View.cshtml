@model ICollection<CartItem>
@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => item.ItemId)
                        <button type="submit" class="btn btn-danger">Remove</button>
                    }
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3"></td>
            <td>
                <strong>Total:</strong>
            </td>
            <td>
                <strong>@Model.Sum(item => item.Quantity * item.Price).ToString("C")</strong>
            </td>
        </tr>
        </tfoot>
    </table>

    @using (Html.BeginForm("ClearCart", "Cart", FormMethod.Post))
    {
        <button type="submit" class="btn btn-warning">Clear Cart</button>
    }

    @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
    {
        <button type="submit" class="btn btn-success">Checkout</button>
    }
}