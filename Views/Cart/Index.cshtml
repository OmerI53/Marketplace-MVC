@model ICollection<CartItem>

@{
ViewData["Title"] = "Cart";
}

<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show overlay-alert" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <div class="cart-layout">
        <div class="cart-items">
            @if (!Model.Any())
            {
            <p>Your cart is empty.</p>
            }
            else
            {
            <div class="scrollable-table">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@((item.Quantity * item.Price).ToString("C"))</td>
                        <td>
                            @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                            {
                            <input type="hidden" name="itemId" value="@item.ItemId"/>
                            <input type="hidden" name="userId" value="@item.SellerId"/>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                            }
                        </td>
                    </tr>
                    }
                    </tbody>
                </table>
            </div>
            }
        </div>
        <div style="width: 50px"></div>
        <div class="cart-summary">
            <strong style="font-size: 40px">Total:</strong>
            <strong style="font-size: 30px">@Model?.Sum(item => item.Quantity * item.Price).ToString("C")</strong>
            <div style="height: 25px"></div>
            @using (Html.BeginForm("ClearCart", "Cart", FormMethod.Post))
            {
            <button type="submit" class="btn clear-cart btn-common-size">Clear Cart</button>
            }
            <div style="height: 10px"></div>
            @using (Html.BeginForm("Purchase", "Cart", FormMethod.Post))
            {
            <button type="submit" class="btn purchase btn-common-size">Purchase</button>
            }
        </div>
    </div>
</div>

<style>
    .cart-layout {
        display: flex;
        justify-content: space-between;
    }

    .cart-items {
        flex: 3; /* Adjust based on preference */
    }

    .cart-summary {
        flex: 1; /* Adjust based on preference */
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 20px;
    }

    .btn-danger {
        background-color: red;
        color: white;
    }

    .overlay-alert {
        position: fixed;
        top: 20px; /* Adjust as needed */
        left: 50%;
        transform: translateX(-50%);
        width: auto; /* Adjust as needed */
        z-index: 1050; /* Ensure it's above other elements */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional for a subtle shadow */
    }

    .clear-cart {
        background-color: #f2f2f2;
        color: #333333;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .clear-cart:hover {
        background-color: #e0e0e0;
    }

    .purchase {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .purchase:hover {
        background-color: #0056b3;
    }

    .btn-common-size {
        width: 150px;
        height: 50px;
        display: inline-block;
        text-align: center;
    }

    .scrollable-table {
        max-height: 600px;
        overflow-y: auto;
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>