@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TestMVC.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav w-100">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark bar-text" asp-controller="User" asp-action="Index">Profile</a>
    </li>
    @if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User) ?? new User(), "Admin"))
    {
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark bar-text" asp-controller="Admin" asp-action="Index">Admin Panel</a>
    </li>
    }
    <div class="d-flex ml-auto">
        <li class="nav-item justify-content-center">
            <a id="home-icon" class="btn btn-toolbar" asp-action="Index" asp-controller="Home">
                <i class="fas fa-home layout-icon"></i>
            </a>
        </li>
        <li class="nav-item justify-content-center">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-toolbar">
                    <i class="fas fa-sign-out-alt layout-icon"></i>
                </button>
            </form>
        </li>
        <li class="nav-item justify-content-center">
            <a id="shopping-cart" class="btn btn-toolbar" asp-action="Index" asp-controller="Cart">
                <i class="fas fa-shopping-cart layout-icon"></i>
            </a>
        </li>
    </div>
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    }
</ul>

<style>
    .navbar-nav > li, .navbar-nav .d-flex {
        display: flex;
        align-items: center;
        margin-right: 15px; /* Adjust spacing as needed */
    }

    /* Optional: If you want the shopping cart to stand out or have additional styling */
    #shopping-cart {
        padding: 5px 10px; /* Adjust padding as needed */
        border-radius: 5px; /* Optional: Adds rounded corners */
    }

    .layout-icon {
        font-size: 35px;
    }
    .layout-icon:hover {
        color: #0040ff; /* Change color on hover */
    }
    .bar-text {
        font-weight: bold; /* Makes text bold */
        font-size: 1.2em; /* Increases the font size; adjust as needed */
    }
</style>