@model IEnumerable<TestMVC.Models.Entity.PurchasedItem>

<div class="container justify-content-center">
    <div class="purchase-history-container">
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Item</th>
                <th>Quantity</th>
                <th>Per Item Price</th>
                <th>Total Price</th>
            </tr>
            </thead>
        </table>
        <div class="history-table">
            <table class="table">
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PurchaseDate.Month / @item.PurchaseDate.Year</td>
                        <td>@item.Item!.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>@item.PerItemPrice</td>
                        <td>@((item.Quantity * item.PerItemPrice).ToString("C"))</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .history-table{
        max-height: 150px;
        min-height: 150px;
        overflow-y: auto;
        width: 100%;
        height: 100%;
    }
</style>